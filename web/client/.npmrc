# pnpm Configuration for intygsadmin

# Use workspace protocol for local dependencies
use-workspace-protocol=true

# Strict peer dependencies
strict-peer-dependencies=false

# Shamefully hoist for React app compatibility
shamefully-hoist=true

# Auto install peers
auto-install-peers=true

# Node linker (hoisted for CRA compatibility)
node-linker=hoisted

# Public hoist pattern for problematic dependencies
public-hoist-pattern[]=*chalk*
public-hoist-pattern[]=*supports-color*
public-hoist-pattern[]=*ansi-styles*
public-hoist-pattern[]=*color-convert*
public-hoist-pattern[]=*color-name*
public-hoist-pattern[]=*has-flag*

